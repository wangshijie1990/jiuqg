.quick-goods-title{
      display: flex;
      height: 40rpx;
      line-height: 40rpx;
      padding-bottom:30rpx;
      
}
.quick-goods-title-main{
      width:160rpx;
      font-size:32rpx;
     
}
.quick-goods-title-sub{
      flex:1;
      font-size:25rpx;
      color:#666;
}
.quick-goods-nav{
      white-space :nowrap ;
      height: 80rpx;
      overflow-y: hidden;
      overflow: scroll;
      background-color:#fff;
      
}
.quick-goods-nav::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
.quick-goods-nav .quick-goods-nav-item{
      display: inline-block;
      font-size:28rpx;
      line-height: 38rpx;
      padding-left:30rpx;
      padding-right: 30rpx;
      text-align: center;
      height: 80rpx;
}
.quick-goods-nav .quick-goods-nav-item.current{
      background-color: #66cc99;
      color:#fff;
      
}
.quick-goods-goods-container{
      background-color: #66cc99;
      white-space :nowrap ;
      padding-top:20rpx;
      padding-bottom:20rpx;
      overflow: scroll;
}
.quick-goods-goods-container::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
.quick-goods .quick-goods-item:last-child{
      margin-right: 20rpx;
}
.quick-goods .quick-goods-item{
      display: inline-block;
      width:200rpx;
      margin-left:20rpx;
      overflow: hidden;
      background-color: #fff;
      border-radius: 20rpx;
      padding:10rpx;
      position: relative;
}
.quick-goods .quick-goods-item .no-stock{
      position: absolute;
      z-index: 99;
      top:0;
      left:0;
      width: 100%;
      height: 100%;
}
.quick-goods .quick-goods-item .no-stock .no-stock-bg{
      width:100%;
      height: 100%;
      background-color: #000;
      opacity: 0.2;
}
.quick-goods .quick-goods-item .no-stock image{
      position: absolute;
      top:100rpx;
      left:15%;
      width:135rpx;
      height: 120rpx;
}
.quick-goods .quick-goods-item .goods-item-img{
      width:200rpx;
      height: 200rpx;
      overflow: hidden;
}
.quick-goods .quick-goods-item .goods-item-img image{
      display: block;
      width:200rpx;
      height: 200rpx;
      border-radius: 10rpx;
}
.quick-goods .quick-goods-item .goods-item-title{
      height: 80rpx;
      line-height: 40rpx;
      font-size:25rpx;
      overflow: hidden;
      width:200rpx;
      white-space: normal;
}
.quick-goods .goods-item-price{
      display: flex;
}
.quick-goods .goods-item-price .price{
      color:#66cc99;
      font-size:30rpx;
      flex:1;
      height: 35prx;
      line-height: 35rpx;
}
.quick-goods .goods-item-price .old-price{
      color:#666;
      flex: 1;
      font-size: 25rpx;
      height: 35prx;
      line-height: 35rpx;
      text-decoration: line-through;
}